<div class="container">
  <h1><%= @article.title %></h1>

  <p>
    <%= @article.text %>
  </p>

  <%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label :author, :class => "form-group" %>
    <div class="col-md-8">
      <%= f.text_field :author, :class => "form-control", :autofocus => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, :class => "form-group" %>
    <div class="col-md-8">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>

  <%= f.submit :class => "btn btn-primary btn-lg" %>
  <% end %>
</div>
